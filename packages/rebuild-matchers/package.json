{
  "name": "@codemod-esm/rebuild-matchers",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Rebuilds the bulk of `@codemod/matchers` based on the Babel AST.",
  "author": "Brian Donovan",
  "license": "Apache-2.0",
  "repository": "https://github.com/codemod-js/codemod",
  "exports": {
    "bun": "./src/rebuild.ts",
    "default": "./dist/index.js"
  },
  "main": "dist/rebuild.js",
  "types": "dist/rebuild.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "bun test"
  },
  "dependencies": {
    "@babel/types": "^7.26.3",
    "@codemod-esm/utils": "workspace:^"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/generator": "^7.26.3",
    "@babel/traverse": "^7.26.4",
    "@codemod-esm/core": "workspace:^",
    "@codemod-esm/parser": "workspace:^",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.9",
    "dedent": "^1.5.3",
    "typescript": "^5.7.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
