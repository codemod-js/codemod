{
  "name": "codemod",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "scripts": {
    "lint": "script/ci lint",
    "test": "script/ci"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lerna": "^3.10.7",
    "lint-staged": "^9.2.1",
    "prettier": "^1.15.3",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "resolutions": {
    "**/@babel/parser": "7.7.5",
    "**/@babel/types": "7.7.4",
    "**/@types/node": "12.11.1"
  }
}
