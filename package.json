{
  "name": "codemod",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "scripts": {
    "test": "script/ci"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/mz": "^0.0.32",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "lerna": "^3.10.7",
    "lint-staged": "^9.2.1",
    "mz": "^2.7.0",
    "prettier": "^1.15.3",
    "sort-package-json": "^1.22.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.6.3"
  },
  "resolutions": {
    "**/@babel/parser": "7.6.2",
    "**/@babel/types": "7.6.1",
    "**/ip-regex": "^2.0.0"
  }
}
