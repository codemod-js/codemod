{
  "name": "codemod",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/**"
    ]
  },
  "scripts": {
    "lint": "script/ci lint",
    "test": "script/ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "resolutions": {
    "**/@babel/parser": "7.12.5",
    "**/@babel/types": "7.12.6",
    "**/@types/node": "12.11.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/node": "^15.14.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.0",
    "jest": "^25.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.2",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.4"
  }
}
